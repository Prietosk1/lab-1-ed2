{
  // Usar Prettier como formateador por defecto
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  // Para TypeScript y TSX, aplicar siempre Prettier
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "cSpell.words": ["Anual", "aveg", "logomark", "papaparse", "turbopack"],
  "cSpell.language": "en,es",
  "cSpell.enabledFileTypes": {
    ".js": true,
    ".ts": true,
    ".tsx": true,
    ".json": true,
    ".css": true
  }
}
